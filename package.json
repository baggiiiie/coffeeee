{
    "name": "coffee-companion",
    "version": "1.0.0",
    "description": "A fullstack coffee brewing companion application",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "npm run dev --workspace=apps/frontend",
        "dev:backend": "npm run dev --workspace=apps/backend",
        "build": "npm run build --workspaces",
        "test": "CI=true npm run test --workspaces",
        "lint": "npm run lint --workspaces",
        "lint:fix": "npm run lint:fix --workspaces",
        "clean": "npm run clean --workspaces",
        "db:setup": "cd apps/backend && go run cmd/setup/main.go",
        "db:migrate": "cd apps/backend && go run cmd/migrate/main.go",
        "db:seed": "cd apps/backend && go run cmd/seed/main.go"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/coffee-companion.git"
    },
    "keywords": [
        "coffee",
        "brewing",
        "go",
        "react",
        "typescript",
        "fullstack"
    ],
    "author": "Your Name",
    "license": "MIT"
}
