{
    "name": "@coffee-companion/backend",
    "version": "1.0.0",
    "description": "Go backend for Coffee Companion",
    "scripts": {
        "dev": "go run cmd/server/main.go",
        "build": "go build -o coffee-companion cmd/server/main.go",
        "test": "go test ./...",
        "test:coverage": "go test -coverprofile=coverage.out ./...",
        "lint": "golangci-lint run",
        "clean": "rm -f coffee-companion coverage.out",
        "db:setup": "go run cmd/setup/main.go",
        "db:migrate": "go run cmd/migrate/main.go",
        "db:seed": "go run cmd/seed/main.go"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}